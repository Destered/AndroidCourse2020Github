<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notification_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="288px"
    android:padding="8dp">

    <TextView
        android:id="@+id/tv_notif_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_notif_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:maxLines="1"
        android:text="TextView"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tv_notif_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_notif_title" />

    <LinearLayout
        android:id="@+id/notification_button_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_notif_prev"
            android:layout_width="64px"
            android:layout_height="64px"
            android:layout_marginTop="16dp"
            android:layout_marginStart="128dp"
            android:maxWidth="64px"
            android:maxHeight="64px"
            android:minWidth="64px"
            android:minHeight="64px"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_notif_author"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/iv_notif_play"
            android:layout_width="64px"
            android:layout_height="64px"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            android:maxWidth="64px"
            android:maxHeight="64px"
            android:minWidth="64px"
            android:minHeight="64px"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/iv_notif_next"
            android:layout_width="64px"
            android:layout_height="64px"
            android:maxWidth="64px"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            android:maxHeight="64px"
            android:minWidth="64px"
            android:minHeight="64px"

            tools:srcCompat="@tools:sample/avatars" />
    </LinearLayout>

</LinearLayout>